{
  "name": "demoblaze-playwright-pom",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "playwright test --project=chromium",
    "auth-sign-login-chrome": "npx playwright test auth.signup-login.spec.ts --project=chromium",
    "test:ui": "playwright test --ui",
    "test:smoke": "playwright test tests/smoke.add-to-cart.spec.ts --project=chromium",
    "test:headed": "playwright test --headed --project=chromium",
    "test:debug": "PWDEBUG=1 playwright test --project=chromium",
    "report": "playwright show-report",
    "codegen": "playwright codegen https://www.demoblaze.com",
    "install:pw": "playwright install --with-deps"
  },
  "devDependencies": {
    "@argos-ci/playwright": "^6.0.4",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.54.2",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^24.2.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.6.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
